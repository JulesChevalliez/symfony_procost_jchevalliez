{% extends 'layout.html.twig' %}
{% block content %}

    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Edition</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path("main_homepage") }}"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('main_projects') }}">Projets</a>
            </li>
            <li class="breadcrumb-item">Edition d'un employé</li>
        </ul>
    </div>

    <div class="tile">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_errors(form.name) }}
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': form.name.vars.label}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.description) }}
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': form.description.vars.label}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.selling_price) }}
            {{ form_label(form.selling_price) }}
            {{ form_widget(form.selling_price, {'attr': {'class': 'form-control', 'placeholder': form.selling_price.vars.label}}) }}
        </div>
        <div class="form-group">
            <div class="utility">
                <div class="animated-checkbox">
                    <label>
                        {{ form_errors(form.delivered) }}
                        {{ form_widget(form.delivered, {'attr': {'class': 'form-control', 'placeholder': form.delivered.vars.label}}) }}
                        <span class="label-text">Projet livré</span>
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</a></button>
        {{ form_end(form) }}

    </div>
{% endblock %}

