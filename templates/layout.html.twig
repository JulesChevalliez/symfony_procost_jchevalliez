{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <!-- Navbar -->
    <header class="app-header"><a class="app-header__logo" href="{{ path('main_homepage') }}">Procost</a>
        <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">
            <li class="app-search">
                <a href="{{ path('app_logout') }}" class="btn btn-info">Se déconnecter</a>
            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <div class="app-sidebar__user">
            <img class="app-sidebar__user-avatar" src="/img/user.jpg" alt="User Image">
            <div>
                <p class="app-sidebar__user-name">{{ currentUser.name }} {{ currentUser.firstName }}</p>
                <p class="app-sidebar__user-designation">Manager</p>
            </div>
        </div>
        <ul class="app-menu">
            <li>
                <a class="app-menu__item {{ app.request.attributes.get('_route') is same as('main_homepage') ? 'active' }}"
                   href="{{ path('main_homepage') }}">
                    <i class="app-menu__icon fa fa-dashboard"></i>
                    <span class="app-menu__label">Tableau de bord</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item {{ app.request.attributes.get('_route') is same as('main_projects') ? 'active' }}"
                   href="{{ path('main_projects') }}">
                    <i class="app-menu__icon fa fa-laptop"></i>
                    <span class="app-menu__label">Projets</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item {{ app.request.attributes.get('_route') is same as('main_users') ? 'active' }}"
                   href="{{ path('main_users') }}">
                    <i class="app-menu__icon fa fa-users"></i>
                    <span class="app-menu__label">Employés</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item {{ app.request.attributes.get('_route') is same as('main_jobs') ? 'active' }}"
                   href="{{ path('main_jobs') }}">
                    <i class="app-menu__icon fa fa-book"></i>
                    <span class="app-menu__label">Métiers</span>
                </a>
            </li>
        </ul>
    </aside>
    <main class="app-content">
        {% block content %}{% endblock %}
    </main>
{% endblock %}



